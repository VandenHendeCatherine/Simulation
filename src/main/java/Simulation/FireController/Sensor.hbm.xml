<?xml version="1.0"?><!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd"><hibernate-mapping>
    <class name="Sensor" table="capteurs">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="positionXCapteur" type="numeric" not-null="true" />
        <property name="positionYCapteur" type="numeric" not-null="true" />
        <property name="intensity" type="int" not-null="true"/>
    </class>
</hibernate-mapping>